{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
<section class="snowtrick-form">
    <h2 class="mt-3">Send us a message!</h2>
    {% form_theme contact_form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(contact_form) }}
    {{ form_widget(contact_form) }}
    <button type="submit" class="btn btn-primary" formnovalidate>
        <span class="fa fa-paper-plane" aria-hidden="true"></span>
        Send message
    </button>
    {{ form_end(contact_form) }}
</section>
{% endblock %}
