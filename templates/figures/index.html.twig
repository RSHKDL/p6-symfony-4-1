{% extends 'base.html.twig' %}

{% block body %}

<h2>Nos figures</h2>

    {% if figures %}
        <ul>
        {% for figure in figures %}
            <li>
                <a href="{{ path('view_figure', {slug: figure.slug}) }}">{{ figure.name }}</a>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p>No figures yet</p>
    {% endif %}

{% endblock %}