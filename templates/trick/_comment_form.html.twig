{{ form_start(form, {
        method: 'POST',
        action: path('comments_create', {'trickSlug': trick.slug}),
        'attr': {'class': 'form-inline justify-content-center'}
    })
}}
{% form_theme form 'form/template.html.twig' %}

{{ form_errors(form) }}

<div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
    {{ form_errors(form.content) }}
    {{ form_widget(form.content) }}
</div>

<div class="form-group m-0">
    <button class="btn btn-secondary pull-right" type="submit" formnovalidate>
        <i class="fa fa-paper-plane" aria-hidden="true"></i> Leave a comment
    </button>
</div>

<div class="text-center">
    {{ form_help(form.content) }}
</div>

{{ form_end(form) }}